<script>
import {
  getTable,
  delAuthorization
} from '@/api/sys-monitoringAnalysis/roster-warning/authorization.js'
import { ValidQueryInput, commonPattern } from '@/utils/formValidate'
import { dictionary } from '@/api/sys-monitoringAnalysis/roster-warning/common.js'
import { getsourceBusinessArr } from '@/api/sys-monitoringAnalysis/roster-warning/levelConfiguration.js'
import preliminaryJudgment from '@/views/sys-monitoringAnalysis/monitoringWarning/rosterWarning/components/preliminaryJudgment.vue'
import organizationTree from '@/views/sys-monitoringAnalysis/monitoringWarning/rosterWarning/components/organizationTree.vue'

export default {
  components: {
    preliminaryJudgment,
    organizationTree
  },
  data() {
    return {
      pickerOptions1: {
        disabledDate(time) {
          return time.getTime() > Date.now() - 8.64e6
        }
      },
      toggleSearch: true,
      loadingA: true,
      powerIds: [],
      dialogJudgmentData: [],
      form: {
        // form表单参数
        // impName: '',
        sourceDire: '',
        sourceBusiness: '',
        subjectName: '',
        subjectINum: '',
        listSourceDocNum: '',
        date: '',
        powResult: '',
        remark: '',
        preliminaryJudgment: []
      },
      powResultArr: [
        {
          value: 1,
          label: '初步查询结果'
        },
        {
          value: 2,
          label: '扩展及初步查询结果'
        }
      ],
      checkdOrganization: [], // 选择的机构
      select_orderId: [], // 选择的机构
      powerDOS: [], // 授权机构
      sourceDireArr: [], // 来源方向
      sourceBusinessArr: [], // 来源业务
      // organizationId: [],
      props: {
        label: 'text',
        children: 'children'
      },
      list: [],
      rowKey: function(row) {
        return row.lcnId
      },
      pageInfo: {
        pageNum: 1,
        pageSize: 10,
        total: 0
      }, rules: {
        // 非必填
        subjectName: [{ validator: ValidQueryInput, trigger: 'blur' }],
        subjectINum: [{ validator: this.onlyNumberValidate, trigger: 'blur' }, { validator: ValidQueryInput, trigger: 'blur' }],
        // impName: [{ validator: ValidQueryInput, trigger: 'blur' }],
        listSourceDocNum: [{ validator: ValidQueryInput, trigger: 'blur' }],
        powResult: [{ validator: ValidQueryInput, trigger: 'blur' }],
        remark: [{ validator: ValidQueryInput, trigger: 'blur' }]
      }
    }
  },
  computed: {
    // 列表查询参数
    searchParams() {
      const obj = Object.assign({}, this.form, this.pageInfo)
      delete obj.date
      delete obj.total
      // obj.listSourceDocNum = encodeURI(this.form.listSourceDocNum)
      if (this.form.date) {
        obj.startInfoSaveDate = this.form.date[0] + ' 00:00:00'
        obj.endInfoSaveDate = this.form.date[1] + ' 24:00:00'
      }
      // obj.powerId = this.organizationId.join()
      return obj
    }
  },
  created() {
    if (sessionStorage.getItem('searchData')) {
      const searchData = JSON.parse(sessionStorage.getItem('searchData'))
      if (searchData.pageName === this.$route.name && searchData.ifReview) {
        this.pageInfo = searchData.pageInfo
        this.form = searchData.searchForm
        this.toggleSearch = searchData.toggleSearch
        this.powerDOS = searchData.powerDOS
        this.showParentComp(searchData.powerDOS)
      }
    }
  },
  mounted() {
    this.getDictionary('TOSC') // 数据字典 - 初步判断
    this.getDictionary('SCDT')
    this.getDictionary('SCDS')
    this.getsourceBusinessArr()
    this.fetchData(this.searchParams) // 获取列表数据
  },
  methods: {
    onlyNumberValidate(rule, value, callback) {
      if (value !== null && value !== '' && value !== undefined) {
        if (value.length <= 5 || value.length >= 129) {
          callback(new Error('内容应在6-128位之间'))
        } else if (commonPattern.headerAndFooter.test(value)) {
          callback(new Error('首尾不能有空格'))
        } else {
          callback()
        }
      } else {
        callback()
      }
    },
    preliminaryJudgmeFiler(val) {
      const arr = []
      val.powerDOS.map(x => {
        arr.push(x.powName)
      })
      return arr.join(',')
    },
    handleClose(tag) {
      this.powerDOS.splice(this.powerDOS.indexOf(tag), 1)
      this.$refs.tree.clear(tag)
      this.powerIds = []
      this.powerDOS.forEach(item => {
        this.powerIds.push(item.userId)
      })
    },
    showParentComp(data) {
      this.powerIds = []
      this.powerDOS = data
      data.forEach(item => {
        this.powerIds.push(item.userId)
      })
    },
    // 获取字典
    getDictionary(params) {
      dictionary(params).then(res => {
        if (res.code === 200) {
          switch (params) {
            case 'TOSC':
              this.dialogJudgmentData = res.data
              break
            // case 'SCDT':
            //   this.sourceDireArr = res.data
            //   break
            default:
              break
          }
        }
      })
    },
    // 获取来源业务
    getsourceBusinessArr() {
      var paramsObj = {
        pageNum: 1,
        pageSize: 9999
      }
      getsourceBusinessArr(paramsObj, '0').then(res => {
        if (res.code === 200) {
          this.sourceBusinessArr = res.data.list
        }
      })
      getsourceBusinessArr(paramsObj, '1').then(res => {
        if (res.code === 200) {
          this.sourceDireArr = res.data.list
        }
      })
      // getsourceBusinessArr('SCDS').then(res => {
      //   if (res.code === 200) {
      //     this.sourceBusinessArr = res.data
      //   }
      // })
    },
    isDisabled(row, index) {
      // return row.powerDOS.length > 0 && row.powerDOS[0].plId
      if (row.powerDOS[0].powName != null || row.powerDOS[0].mechanismName != null) {
        return true
      } else {
        return false
      }
    },
    // 初步判断弹窗 - 选择CheckBox
    // dialogHandleCheck(val) {
    //   this.preliminaryJudgmentData = []
    //   this.preliminaryJudgment = []
    //   val.forEach(item => {
    //     this.dialogJudgmentData.map(item2 => {
    //       if (item === item2.codeId) {
    //         this.preliminaryJudgmentData.push(item2)
    //         this.preliminaryJudgment.push(item)
    //       }
    //     })
    //   })
    // },

    // 获取列表数据方法
    fetchData(params, obj) {
      params.preliminaryJudgment = params.preliminaryJudgment ? params.preliminaryJudgment.join(',') : ''
      this.$refs.searchForm.validate(val => {
        if (val) {
          if (this.powerIds) {
            this.searchParams.powerIds = this.powerIds.join()
          } else {
            this.searchParams.powerIds = ''
          }
          if (obj === 'cx') {
            this.pageInfo.pageNum = 1
          }
          this.loadingA = true
          getTable(this.searchParams).then(res => {
            if (res.code === 200) {
              this.list = res.data.list
              this.loadingA = false
              this.pageInfo.total = res.data.total
              const searchData = {
                pageName: this.$route.name,
                pageInfo: this.pageInfo,
                searchForm: this.form,
                toggleSearch: this.toggleSearch,
                powerDOS: this.powerDOS
              }
              sessionStorage.setItem('searchData', JSON.stringify(searchData))
            }
          }).catch(() => {
            this.loadingA = false
          })
        }
      })
    },
    // 点击查询
    searchFn(obj) {
      this.fetchData(this.searchParams, obj)
    },
    // 查询条件清空
    clearForm() {
      this.powerIds = []
      this.powerDOS = []
      // this.form.impName = ''
      this.form.sourceDire = ''
      this.form.sourceBusiness = ''
      this.form.subjectName = ''
      this.form.subjectINum = ''
      this.form.listSourceDocNum = ''
      this.form.date = ''
      this.form.powResult = ''
      this.form.remark = ''
      this.form.preliminaryJudgment = []
      this.$refs.searchForm.clearValidate()
    },
    // 切换分页条数
    handleSizeChange(size) {
      this.pageInfo.pageSize = size
      this.fetchData(this.searchParams)
    },
    // 点击切换分页
    handleCurrentChange(pageNum) {
      this.pageInfo.pageNum = pageNum
      this.fetchData(this.searchParams)
    },
    // 查看名单
    viewSingle(row) {
      var id = row.lcnId
      var powResult = ''
      if (row.powerDOS && row.powerDOS.length !== 0) {
        powResult = row.powerDOS[0].powResult
      }
      this.$router.push({ name: 'rosterManage_authorization_detail', query: { id: id, powResult: powResult }})
    },
    // 重置授权方法
    restAuthorization(id) {
      delAuthorization(id).then(res => {
        if (res.code === 200) {
          this.$message({
            message: '操作成功',
            type: 'success',
            duration: 6000
          })
          this.fetchData(this.searchParams)
        }
      })
    },
    // 重置单条名单授权方法
    singleRest(id) {
      this.$confirm('是否重置此名单的授权？', '提示', {
        confirmButtonText: '确定',
        cancelButtonText: '取消',
        type: 'warning'
      })
        .then(() => {
          this.restAuthorization(id)
        })
        .catch(() => {
          this.$message({
            message: '已取消操作',
            type: 'info',
            duration: 6000
          })
        })
    },
    // 获取选中名单id
    selectionChange(rows) {
      this.select_orderId = []
      if (rows) {
        rows.forEach(row => {
          if (row) {
            this.select_orderId.push(row.lcnId)
          }
        })
      }
    },
    // 批量重置
    allowmassprune() {
      if (this.select_orderId.length > 0) {
        this.$confirm('确定要重置选中的数据？', '提示', {
          confirmButtonText: '确定',
          cancelButtonText: '取消',
          type: 'warning'
        })
          .then(() => {
            this.restAuthorization(this.select_orderId.join())
          })
          .catch(() => {
            this.$message({
              message: '已取消',
              type: 'info',
              duration: 6000
            })
          })
      } else {
        this.$message({
          type: 'warning',
          message: '请选择要重置的数据 ！',
          duration: 6000
        })
      }
    }
  }
}
</script>

